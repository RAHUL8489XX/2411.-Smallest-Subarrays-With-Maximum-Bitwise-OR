
class Solution:
    def smallestSubarrays(self, nums):
        n = len(nums)
        answer = [0] * n
        last = [-1] * 32  # track last occurrence of each bit
        
        for i in range(n - 1, -1, -1):
            for b in range(32):
                if (nums[i] >> b) & 1:
                    last[b] = i  # update bit b seen at index i

            # find farthest bit-set index
            farthest = i
            for b in range(32):
                if last[b] != -1:
                    farthest = max(farthest, last[b])

            answer[i] = farthest - i + 1

        return answer
